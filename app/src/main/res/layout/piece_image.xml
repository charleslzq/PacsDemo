<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_thumb"
    android:padding="3dp">

    <ImageView
        android:id="@+id/imagesContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/imageContentDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/leftVerticalGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02" />

    <android.support.v7.widget.CardView
        android:id="@+id/leftTopPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/leftVerticalGuideLine"
        app:layout_constraintTop_toBottomOf="@id/topHorizontalGuideLine"
        app:cardBackgroundColor="@color/image_meta_card_color"
        app:cardCornerRadius="@dimen/image_meta_card_radius"
        android:elevation="@dimen/image_meta_card_elevation"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/image_meta_card_internal_padding">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/windowInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/metaInfoTextSize" />
            <TextView
                android:id="@+id/sliceInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/metaInfoTextSize" />
            <TextView
                android:id="@+id/scaleInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/metaInfoTextSize"/>
            <TextView
                android:id="@+id/imageProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/metaInfoTextSize" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.constraint.Guideline
        android:id="@+id/rightVerticalGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98" />

    <android.support.v7.widget.CardView
        android:id="@+id/rightTopPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintRight_toLeftOf="@id/rightVerticalGuideLine"
        app:layout_constraintTop_toBottomOf="@id/topHorizontalGuideLine"
        app:cardBackgroundColor="@color/image_meta_card_color"
        app:cardCornerRadius="@dimen/image_meta_card_radius"
        android:elevation="@dimen/image_meta_card_elevation"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/image_meta_card_internal_padding">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imagesContainer"
            android:layout_alignEnd="@id/imagesContainer"
            android:orientation="vertical">
            <TextView
                android:id="@+id/patientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/metaInfoTextSize"
                android:textColor="@color/common_text_color"
                android:textAlignment="gravity"
                android:gravity="end"/>
            <TextView
                android:id="@+id/patientId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/metaInfoTextSize"
                android:textColor="@color/common_text_color"
                android:textAlignment="gravity"
                android:gravity="end"/>
            <TextView
                android:id="@+id/patientInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/metaInfoTextSize"
                android:textColor="@color/common_text_color"
                android:textAlignment="gravity"
                android:gravity="end"/>
            <TextView
                android:id="@+id/institutionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/metaInfoTextSize"
                android:textColor="@color/common_text_color"
                android:textAlignment="gravity"
                android:gravity="end"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/metaInfoTextSize"
                android:textColor="@color/common_text_color"
                android:textAlignment="gravity"
                android:gravity="end"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.constraint.Guideline
        android:id="@+id/topHorizontalGuideLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <android.support.v7.widget.CardView
        android:id="@+id/leftBottomPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/leftVerticalGuideLine"
        app:layout_constraintBottom_toTopOf="@id/bottomHorizontalGuideLine"
        app:cardBackgroundColor="@color/image_meta_card_color"
        app:cardCornerRadius="@dimen/image_meta_card_radius"
        android:elevation="@dimen/image_meta_card_elevation"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/image_meta_card_internal_padding">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imagesContainer"
            android:layout_alignStart="@id/imagesContainer"
            android:orientation="vertical">
            <TextView
                android:id="@+id/xRayInfo"
                android:textSize="@dimen/metaInfoTextSize"
                android:textColor="@color/common_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/time"
                android:textSize="@dimen/metaInfoTextSize"
                android:textColor="@color/common_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.constraint.Guideline
        android:id="@+id/bottomHorizontalGuideLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98" />

    <android.support.v7.widget.CardView
        android:id="@+id/imageController"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintRight_toLeftOf="@id/rightVerticalGuideLine"
        app:layout_constraintBottom_toTopOf="@id/bottomHorizontalGuideLine"
        app:cardBackgroundColor="@color/image_meta_card_color"
        app:cardCornerRadius="@dimen/image_meta_card_radius"
        android:elevation="@dimen/image_meta_card_elevation"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/image_meta_card_internal_padding">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignEnd="@id/imagesContainer"
            android:layout_alignBottom="@id/imagesContainer">
            <LinearLayout
                android:id="@+id/displayController"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="?android:attr/buttonBarStyle"
                >
                <Button
                    android:id="@+id/measureAngleButton"
                    android:layout_width="@dimen/imageButtonSize"
                    android:layout_height="@dimen/imageButtonSize"
                    android:layout_margin="@dimen/imageButtonMargin"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/circle_button"
                    android:textColor="@color/common_text_color"
                    android:text="角"/>
                <Button
                    android:id="@+id/measureLineButton"
                    android:layout_width="@dimen/imageButtonSize"
                    android:layout_height="@dimen/imageButtonSize"
                    android:layout_margin="@dimen/imageButtonMargin"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/circle_button"
                    android:textColor="@color/common_text_color"
                    android:text="线"/>
                <Button
                    android:id="@+id/pseudoColorButton"
                    android:layout_width="@dimen/imageButtonSize"
                    android:layout_height="@dimen/imageButtonSize"
                    android:layout_margin="@dimen/imageButtonMargin"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/circle_button"
                    android:textColor="@color/common_text_color"
                    android:text="@string/pseudo_icon"/>
                <Button
                    android:id="@+id/reverseButton"
                    android:layout_width="@dimen/imageButtonSize"
                    android:layout_height="@dimen/imageButtonSize"
                    android:layout_margin="@dimen/imageButtonMargin"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/circle_button"
                    android:textColor="@color/common_text_color"
                    android:text="@string/reverse_icon"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/indexController"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="?android:attr/buttonBarStyle"
                >
                <Button android:id="@+id/firstImage"
                    android:layout_width="@dimen/imageButtonSize"
                    android:layout_height="@dimen/imageButtonSize"
                    android:layout_margin="@dimen/imageButtonMargin"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/circle_button"
                    android:textColor="@color/common_text_color"
                    android:text="@string/image_to_first"
                    />
                <Button android:id="@+id/previousImage"
                    android:layout_width="@dimen/imageButtonSize"
                    android:layout_height="@dimen/imageButtonSize"
                    android:layout_margin="@dimen/imageButtonMargin"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/circle_button"
                    android:textColor="@color/common_text_color"
                    android:text="@string/image_previous"
                    />
                <Button android:id="@+id/imagePlay"
                    android:layout_width="@dimen/imageButtonSize"
                    android:layout_height="@dimen/imageButtonSize"
                    android:layout_margin="@dimen/imageButtonMargin"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/circle_button"
                    android:textColor="@color/common_text_color"
                    android:text="@string/image_play"
                    />
                <Button android:id="@+id/nextImage"
                    android:layout_width="@dimen/imageButtonSize"
                    android:layout_height="@dimen/imageButtonSize"
                    android:layout_margin="@dimen/imageButtonMargin"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/circle_button"
                    android:textColor="@color/common_text_color"
                    android:text="@string/image_next"
                    />
                <Button android:id="@+id/lastImage"
                    android:layout_width="@dimen/imageButtonSize"
                    android:layout_height="@dimen/imageButtonSize"
                    android:layout_margin="@dimen/imageButtonMargin"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/circle_button"
                    android:textColor="@color/common_text_color"
                    android:text="@string/image_to_last"
                    />
            </LinearLayout>
            <LinearLayout android:id="@+id/progressController"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <SeekBar android:id="@+id/imageSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
