<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    android:background="@drawable/border_thumb">

    <com.github.charleslzq.pacsdemo.ImageListView
        android:id="@+id/imagesContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/imageContentDescription"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/imageProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imagesContainer"
        android:layout_centerHorizontal="true"/>

    <SeekBar
        android:id="@+id/imageScaleBar"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_alignBottom="@id/imagesContainer"
        android:layout_alignLeft="@id/imagesContainer"
        android:layout_alignStart="@id/imagesContainer"
        android:layout_alignRight="@id/imagesContainer"
        android:layout_alignEnd="@id/imagesContainer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="invisible"/>

</RelativeLayout>